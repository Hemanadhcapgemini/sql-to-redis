<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sql2redis.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <Pane minHeight="527.0" minWidth="749.0" prefHeight="566.0" prefWidth="749.0" stylesheets="@style.css">
         <children>
            <TabPane layoutX="1.0" layoutY="83.0" prefHeight="307.0" prefWidth="749.0" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                <Tab text="Table list">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="414.0" prefWidth="830.0">
                           <children>
                              <ListView fx:id="tableList" layoutX="14.0" layoutY="36.0" onMouseClicked="#selectTableList" prefHeight="228.0" prefWidth="294.0" />
                              <Button fx:id="importFromTable" layoutX="640.0" layoutY="235.0" mnemonicParsing="false" onAction="#tableToRedisImport" text="Import data" />
                              <Label layoutX="14.0" layoutY="14.0" text="Choose table to migrate" />
                              <TextField fx:id="redisPrefix" layoutX="564.0" layoutY="36.0" />
                              <Label layoutX="400.0" layoutY="41.0" text="Redis key prefix:" />
                              <Label layoutX="400.0" layoutY="80.0" text="Redis key suffix:" />
                              <ChoiceBox fx:id="redisSuffix" layoutX="565.0" layoutY="75.0" prefHeight="25.0" prefWidth="169.0" />
                              <ProgressBar fx:id="tableListProgressbar" layoutX="400.0" layoutY="238.0" prefWidth="200.0" progress="0.0" />
                           </children>
                        </AnchorPane>
                  </content>
                </Tab>
                <Tab text="SQL Query">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <Button layoutX="640.0" layoutY="235.0" mnemonicParsing="false" text="Import data" />
                              <TextArea layoutX="14.0" layoutY="36.0" prefHeight="180.0" prefWidth="521.0" />
                              <Label layoutX="14.0" layoutY="14.0" text="Type SQL Query to execute. Result of this query will be used as table resource" />
                           </children>
                        </AnchorPane>
                  </content>
                </Tab>
                  <Tab text="SQL Query with relations">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <Button layoutX="640.0" layoutY="235.0" mnemonicParsing="false" text="Import data" />
                           </children>
                        </AnchorPane>
                    </content>
                  </Tab>
              </tabs>
            </TabPane>
            <Label layoutX="7.0" layoutY="12.0" text="SQL database" />
            <Label layoutX="7.0" layoutY="47.0" text="Redis database" />
            <Button fx:id="connect" layoutX="640.0" layoutY="49.0" mnemonicParsing="false" onAction="#connect" prefHeight="25.0" prefWidth="100.0" text="Connect" />
            <TextArea fx:id="log" layoutX="7.0" layoutY="395.0" prefHeight="148.0" prefWidth="733.0">
               <cursor>
                  <Cursor fx:constant="DEFAULT" />
               </cursor>
               <font>
                  <Font size="10.0" />
               </font>
            </TextArea>
            <TextField fx:id="sqlConnectionString" layoutX="108.0" layoutY="8.0" prefHeight="22.0" prefWidth="262.0" promptText="jdbc:postgresql://hostname:port/dbname">
               <font>
                  <Font size="11.0" />
               </font>
            </TextField>
            <TextField fx:id="sqlUsername" layoutX="374.0" layoutY="8.0" prefHeight="22.0" prefWidth="100.0" promptText="username">
               <font>
                  <Font size="11.0" />
               </font>
            </TextField>
            <PasswordField fx:id="sqlPassword" layoutX="479.0" layoutY="8.0" prefHeight="22.0" prefWidth="100.0" promptText="password">
               <font>
                  <Font size="11.0" />
               </font>
            </PasswordField>
             <TextField fx:id="sqlSchema" layoutX="582.0" layoutY="8.0" prefHeight="22.0" prefWidth="116.0" promptText="schema (optional)">
                 <font>
                     <Font size="11.0" />
                 </font>
             </TextField>
             <TextField fx:id="redisHostname" layoutX="109.0" layoutY="43.0" prefHeight="22.0" prefWidth="130.0" promptText="IP/hostname">
                 <font>
                     <Font size="11.0" />
                 </font>
             </TextField>
             <TextField fx:id="redisPort" layoutX="241.0" layoutY="43.0" prefHeight="22.0" prefWidth="48.0" promptText="port">
                 <font>
                     <Font size="11.0" />
                 </font></TextField>
         </children>
      </Pane>
   </children>
</GridPane>
